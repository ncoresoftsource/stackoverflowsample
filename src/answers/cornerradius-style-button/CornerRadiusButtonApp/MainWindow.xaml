<Window x:Class="CornerRadiusButtonApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CornerRadiusButtonApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Button Content="Button1" Style="{StaticResource CornerRadiusButton}"/>
            <Button Content="Button2" Style="{StaticResource CornerRadiusButton}"/>
            <Button Content="Button3" Style="{StaticResource CornerRadiusButton}"/>
        </StackPanel>
    </Grid>
</Window>
